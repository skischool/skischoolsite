<!DOCTYPE html>
<html lang="en">
     <head>
        <meta charset="utf-8" />
        <title>Montage Mtn Ski School</title>
         <link href="~/Content/bootstrap.css" rel="stylesheet" />
@*         <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@
         <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
         <link href="~/Content/Site.css" rel="stylesheet" />
         <script src="~/Scripts/jquery-1.8.2.min.js"></script>
         <script src="~/Scripts/moment.js"></script>
         <script src="~/Scripts/knockout-2.3.0.js"></script>
         <script src="~/Scripts/knockout.mapping-latest.js"></script>
         <script src="~/Scripts/bootstrap.js"></script>
         <script src="~/Scripts/app/account.js"></script>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="brand" href="#">Montage Mtn Ski School</a>
              <div class="nav-collapse collapse">
                  @if (Request.IsAuthenticated) {
                      using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logout" })) {
                          <a class="btn pull-right" id="logout" onclick="accountNS.accountViewModel.logout()">LogOff</a>
                      }
                       
                  } else {
                        <a class="btn pull-right" href="#loginDialog" data-toggle="modal">Login</a>   
                  }     
              </div>
            </div>
          </div>
        </div>

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; Montage Mtn Ski School @DateTime.Now.Year</p>
        </footer>


    </body>
</html>
